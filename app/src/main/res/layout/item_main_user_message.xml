<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp">

  <TextView
      android:id="@+id/mainUserMessageTextView"
      android:layout_width="wrap_content"
      android:maxWidth="300dp"
      android:layout_height="wrap_content"
      android:background="@drawable/chat_main_user_message_background"
      android:text="Hi how are you doing?"
      android:layout_marginStart="10dp"
      android:textColor="#000000"
      android:textSize="20sp"
      android:paddingStart="15dp"
      android:paddingEnd="10dp"
      android:paddingTop="7dp"
      android:paddingBottom="7dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/mainUserTimeTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="September 13th 2019"
      android:textColor="#99000000"
      android:textSize="12sp"
      android:visibility="invisible"
      app:layout_constraintTop_toBottomOf="@+id/mainUserMessageTextView"
      app:layout_constraintStart_toStartOf="@+id/mainUserMessageTextView"
      app:layout_constraintEnd_toEndOf="@+id/mainUserMessageTextView"
      app:layout_constraintHorizontal_bias="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>