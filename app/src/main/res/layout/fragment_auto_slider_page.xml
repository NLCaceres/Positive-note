<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

  <View
      android:id="@+id/backgroundView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@drawable/message_edit_text_background"
      android:backgroundTint="#00FF00"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/pagerUserTextView"
      />

  <TextView
      android:id="@+id/pagerMessageTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="25dp"
      android:layout_marginTop="25dp"
      android:layout_marginEnd="15dp"
      android:textColor="#000000"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/pagerUserTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginTop="15dp"
      android:layout_marginEnd="25dp"
      android:paddingBottom="25dp"
      android:gravity="end"
      android:textColor="#000000"
      android:textSize="20sp"
      app:layout_constrainedWidth="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pagerMessageTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>